{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["next-env.d.ts", "**/src/*.ts", "**/src/*.tsx"],
  "exclude": [
    "node_modules",
    ".storybook",
    "utils-test",
    "**/src/__stories__/**",
    "**/src/__tests__/**",
    "**/src/__stubs__/**"
  ]
}
